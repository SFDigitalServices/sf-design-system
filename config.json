{
  "name": "components",
  "css": {
    "file" : [
      "public/css/all.scss",
      "public/css/pattern-scaffolding.scss"
    ],
    "src": [
      "public/css/*.scss",
      "public/css/**/*.scss"
    ],
    "dist_folder": "public/dist/css"
  },
  "js": {
    "src": [
      "public/js/*.js",
      "public/js/**/*.js"
    ]
  },
  "pattern_lab": {
    "javascript": {
      "src": [
        "public/js/components.js",
        "public/js/main-navigation.js"
      ],
      "destination": [
        "public/dist/js"
      ]
    }
  },
  "images": {
    "src": [
      "public/images/**/*"
    ]
  },
  "autoprefixer": [
    "last 2 versions",
    "> 1%",
    "ie 11"
  ],
  "sass": {
    "outputStyle": "expanded"
  }
}