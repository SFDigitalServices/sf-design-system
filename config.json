{
  "name": "components",
  "css": {
    "src": [
      "src/**/*.scss"
    ],
    "dest": "public/dist/css"
  },
  "js": {
    "src": [
      "src/**/*.js"
    ],
    "dest": "public/dist/js"
  },
  "images": {
    "src": [
      "src/**/*.{png,gif,jpg,jpeg}"
    ],
    "dest": "public/dist/images"
  },
  "autoprefixer": [
    "last 2 versions",
    "> 1%",
    "ie 11"
  ],
  "sass": {
    "outputStyle": "expanded"
  }
}